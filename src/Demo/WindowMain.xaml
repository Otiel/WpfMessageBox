<Window
    x:Class="Demo.WindowMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WpfMessageBox demo"
    ResizeMode="CanMinimize"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Grid x:Name="GridMain" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label
            x:Name="LabelStandardMessageBox"
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center"
            Content="Standard MessageBox"
            FontSize="20" />
        <Label
            x:Name="LabelWpfMessageBox"
            Grid.Row="0"
            Grid.Column="2"
            HorizontalAlignment="Center"
            Content="WpfMessageBox"
            FontSize="20" />
        <Label
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Without title" />
        <Label
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="With text" />
        <Label
            Grid.Row="3"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="With icon" />
        <Label
            Grid.Row="4"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="With header" />
        <Label
            Grid.Row="5"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Custom buttons" />
        <Label
            Grid.Row="6"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="With textbox" />
        <Label
            Grid.Row="7"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="With checkbox" />
        <Label
            Grid.Row="8"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="With textbox and checkbox" />
        <Label
            Grid.Row="9"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Long text" />
        <Label
            Grid.Row="10"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Long instruction" />
        <Label
            Grid.Row="11"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="A nice example" />
        <Label
            Grid.Row="12"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="All features" />
        <Button
            x:Name="ButtonWpfMsgBoxWithoutTitle"
            Grid.Row="1"
            Grid.Column="2"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonWpfMsgBoxWithoutTitle_Click"
            Content="Show" />
        <Button
            x:Name="ButtonStdMsgBoxWithoutTitle"
            Grid.Row="1"
            Grid.Column="1"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonStdMsgBoxWithoutTitle_Click"
            Content="Show" />
        <Button
            x:Name="ButtonWpfMsgBoxWithText"
            Grid.Row="2"
            Grid.Column="2"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonWpfMsgBoxWithText_Click"
            Content="Show" />
        <Button
            x:Name="ButtonStdMsgBoxWithText"
            Grid.Row="2"
            Grid.Column="1"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonStdMsgBoxWithText_Click"
            Content="Show" />
        <Button
            x:Name="ButtonWpfMsgBoxWithIcon"
            Grid.Row="3"
            Grid.Column="2"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonWpfMsgBoxWithIcon_Click"
            Content="Show" />
        <Button
            x:Name="ButtonStdMsgBoxWithIcon"
            Grid.Row="3"
            Grid.Column="1"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonStdMsgBoxWithIcon_Click"
            Content="Show" />
        <Button
            x:Name="ButtonWpfMsgBoxWithHeader"
            Grid.Row="4"
            Grid.Column="2"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonWpfMsgBoxWithHeader_Click"
            Content="Show" />
        <Button
            x:Name="ButtonWpfMsgBoxCustomButtons"
            Grid.Row="5"
            Grid.Column="2"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonWpfMsgBoxCustomButtons_Click"
            Content="Show" />
        <Button
            x:Name="ButtonWpfMsgBoxWithTextBox"
            Grid.Row="6"
            Grid.Column="2"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonWpfMsgBoxWithTextBox_Click"
            Content="Show" />
        <Button
            x:Name="ButtonWpfMsgBoxWithCheckBox"
            Grid.Row="7"
            Grid.Column="2"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonWpfMsgBoxWithCheckBox_Click"
            Content="Show" />
        <Button
            x:Name="ButtonWpfMsgBoxWithTextBoxAndCheckBox"
            Grid.Row="8"
            Grid.Column="2"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonWpfMsgBoxWithTextBoxAndCheckBox_Click"
            Content="Show" />
        <Button
            x:Name="ButtonWpfMsgBoxLongText"
            Grid.Row="9"
            Grid.Column="2"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonWpfMsgBoxLongText_Click"
            Content="Show" />
        <Button
            x:Name="ButtonStdMsgBoxLongText"
            Grid.Row="9"
            Grid.Column="1"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonStdMsgBoxLongText_Click"
            Content="Show" />
        <Button
            x:Name="ButtonWpfMsgBoxLongInstruction"
            Grid.Row="10"
            Grid.Column="2"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonWpfMsgBoxLongInstruction_Click"
            Content="Show" />
        <Button
            x:Name="ButtonWpfMsgBoxNiceExample"
            Grid.Row="11"
            Grid.Column="2"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonWpfMsgBoxNiceExample_Click"
            Content="Show" />
        <Button
            x:Name="ButtonStdMsgBoxAllFeatures"
            Grid.Row="12"
            Grid.Column="1"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonStdMsgBoxAllFeatures_Click"
            Content="Show" />
        <Button
            x:Name="ButtonWpfMsgBoxAllFeatures"
            Grid.Row="12"
            Grid.Column="2"
            Height="24"
            Margin="0,5"
            Padding="10,0"
            HorizontalAlignment="Center"
            Click="ButtonWpfMsgBoxAllFeatures_Click"
            Content="Show" />
    </Grid>
</Window>